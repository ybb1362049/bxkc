<script>
	
function sign(){
	var w = 784 ;
	var h = 300 ;
	var l = (screen.width-w)/2 ;
	var t = (screen.height-h)/2; 
	
	var myUrl= "/erp/mqm/jsp/mqmj009a2.jsp?infoId=A1492071415634" ;
	var urlname="活动报名";
	var style = "menubar=no, toolbar=no, status=no, resizable=no, width="+w+", height="+h+", left=" + l + ", top=" + t ;
	var winId = window.open(myUrl, urlname, style);
	winId.focus();
} 	
	
function SetFont(size)
          {
              var divBody = document.getElementById("textTab");
              if(!divBody)
              {
                  return;
              }
              divBody.style.fontSize = size + "px";
              var divChildBody = divBody.childNodes;
              for(var i = 0; i < divChildBody.length; i++)
              {
                  if (divChildBody[i].nodeType==1)
                  {
                      divChildBody[i].style.fontSize = size + "px";
                  }
              }
          }


</script>
